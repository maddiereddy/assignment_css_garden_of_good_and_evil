<div class="form-well-{{color}}">
  <form class="form-inline form-container" action="/" method="POST">
    <div class="avatar-container">
      <label for="Good">Good</label>
      <input class="form-check" type="radio" name="position" id="Good" value="Good" {{setChecked "Good" position}}>

      <label for="Evil">Evil</label>
      <input class="form-check" type="radio" name="position" id="Evil" value="Evil" {{setChecked "Evil" position}}>
    </div>

    <div class="color-container">
      <label for="colorPicker">Fave Color</label>
      <select class="form-control" name="colorPicker" id="colorPicker" required>
        <option value="Blue" {{setSelected "Blue" color }}>Blue</option>
        <option value="Green" {{setSelected "Green" color }}>Green</option>
        <option value="Pink" {{setSelected "Pink" color }}>Pink</option>
        <option value="Red" {{setSelected "Red" color }}>Red</option>
      </select>
    </div>

    <div class="food-container">
      <label for="food">Fave Food</label>
      <input class="form-control" type="text" name="food" id="food" value="{{food}}" required />
    </div>

    <div class="insanity-container">
      <label for="insanity"> <sub>&nbsp 1</sub>&nbsp Insanity Level &nbsp<sub>  5</sub></label>
      <input type="range" id="insanity" name="insanity" min="1" max="5" value="{{insanity}}">
    </div>

    <div class="btn-container">
      <input class="btn" type="submit" name="submit" value="Submit">
    </div>
  </form>
</div>

<div class="description-container">
    <div class="info-{{position}}">
        <div class="insanity-{{insanity}} header">
            <h3>The '{{position}}' Avatar</h3>
        </div>

        <div class="insanity-{{insanity}} content-{{color}} well well-lg">
            <h2>Preferences</h2>
            <div class="list-container">
                <div class="likes">
                    <h3>Likes</h3>
                    <ul>
                        {{#each description.likes as |like|}}
                        <li>{{like}}</li>
                        {{/each}}
                    </ul>
                </div>

                <div class="dislikes">
                    <h3>Dislikes</h3>
                    <ul>
                        {{#each description.dislikes as |dislike|}}
                        <li>{{dislike}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="insanity-{{insanity}} content-{{color}} well well-lg">
            <h2>Biography</h2>
            <p class="bio">{{description.biography}}
        </div>

        <div class="insanity-{{insanity}} content-{{color}} well well-lg">
            <h2>Resume</h2>
            {{#each description.resume as |jobs|}}
                <div class="job-title">
                    <h3>{{@key}} </h3>
                    {{#each jobs}}
                        <p>{{this}}</p>
                    {{/each}}
                </div> 
            {{/each}}
        </div>
    </div>

</div>